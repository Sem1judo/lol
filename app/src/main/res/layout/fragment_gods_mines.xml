<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_fifth"
    tools:context=".fragments.games.godsmines.GodsMinesFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ocean_container_slot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ocean_iv_background_slot"
            android:layout_width="320dp"
            android:layout_height="320dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />


        <ImageView
            android:id="@+id/ocean_iv_item_five_miner"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/background_saper"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ocean_iv_fourth_item_miner"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/background_saper"
            app:layout_constraintBottom_toBottomOf="@id/ocean_iv_item_five_miner"
            app:layout_constraintEnd_toStartOf="@id/ocean_iv_item_five_miner"
            app:layout_constraintTop_toTopOf="@id/ocean_iv_item_five_miner" />

        <ImageView
            android:id="@+id/ocean_iv_sixth_item_miner"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/background_saper"
            app:layout_constraintBottom_toBottomOf="@id/ocean_iv_item_five_miner"
            app:layout_constraintStart_toEndOf="@id/ocean_iv_item_five_miner"
            app:layout_constraintTop_toTopOf="@id/ocean_iv_item_five_miner" />

        <ImageView
            android:id="@+id/ocean_iv_first_item_miner"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/background_saper"
            app:layout_constraintBottom_toTopOf="@id/ocean_iv_fourth_item_miner"
            app:layout_constraintEnd_toEndOf="@id/ocean_iv_fourth_item_miner"
            app:layout_constraintStart_toStartOf="@id/ocean_iv_fourth_item_miner" />

        <ImageView
            android:id="@+id/ocean_iv_second_item_miner"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/background_saper"
            app:layout_constraintBottom_toTopOf="@id/ocean_iv_item_five_miner"
            app:layout_constraintEnd_toEndOf="@id/ocean_iv_item_five_miner"
            app:layout_constraintStart_toStartOf="@id/ocean_iv_item_five_miner" />

        <ImageView
            android:id="@+id/ocean_iv_third_item_miner"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/background_saper"
            app:layout_constraintBottom_toTopOf="@id/ocean_iv_sixth_item_miner"
            app:layout_constraintEnd_toEndOf="@id/ocean_iv_sixth_item_miner"
            app:layout_constraintStart_toStartOf="@id/ocean_iv_sixth_item_miner" />

        <ImageView
            android:id="@+id/ocean_iv_seventh_item_miner"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/background_saper"
            app:layout_constraintEnd_toEndOf="@id/ocean_iv_fourth_item_miner"
            app:layout_constraintStart_toStartOf="@id/ocean_iv_fourth_item_miner"
            app:layout_constraintTop_toBottomOf="@id/ocean_iv_fourth_item_miner" />

        <ImageView
            android:id="@+id/ocean_iv_eight_item_miner"
            android:layout_width="110dp"
            android:layout_height="110dp"

            android:src="@drawable/background_saper"
            app:layout_constraintEnd_toEndOf="@id/ocean_iv_item_five_miner"
            app:layout_constraintStart_toStartOf="@id/ocean_iv_item_five_miner"
            app:layout_constraintTop_toBottomOf="@id/ocean_iv_item_five_miner" />

        <ImageView
            android:id="@+id/ocean_iv_ninth_item_miner"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/background_saper"
            app:layout_constraintEnd_toEndOf="@id/ocean_iv_sixth_item_miner"
            app:layout_constraintStart_toStartOf="@id/ocean_iv_sixth_item_miner"
            app:layout_constraintTop_toBottomOf="@id/ocean_iv_sixth_item_miner" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/ocean_ll_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/second_balance"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/jost_bold"
                android:text="Total"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/ocean_tv_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/jost_medium"
                android:text="15000"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/second_balance"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/jost_bold"
                android:text="Win"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/ocean_tv_win"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/jost_medium"
                android:text="0"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="10sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ocean_ll_bid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@id/ocean_ll_balance"
        app:layout_constraintStart_toStartOf="@id/ocean_ll_balance"
        app:layout_constraintTop_toBottomOf="@id/ocean_ll_balance">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ocean_btn_50"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:background="@drawable/bid_50" />

            <ImageButton
                android:id="@+id/ocean_btn_100"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/bid_100" />

            <ImageButton
                android:id="@+id/ocean_btn_200"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:background="@drawable/bid_200" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ocean_btn_500"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:background="@drawable/bid_500" />

            <ImageButton
                android:id="@+id/ocean_btn_700"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/bid_700" />

            <ImageButton
                android:id="@+id/ocean_btn_1000"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:background="@drawable/bid_1000" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/ocean_ll_balance"
        app:layout_constraintStart_toStartOf="@id/ocean_ll_balance"
        app:layout_constraintTop_toBottomOf="@id/ocean_ll_bid">

        <TextView
            android:id="@+id/ocean_tv_bid"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/background_rr"
            android:fontFamily="@font/jost_bold"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/ocean_btn_spin"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/btn_spin" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>