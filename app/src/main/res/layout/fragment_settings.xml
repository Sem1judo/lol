<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    tools:context=".fragments.menu.SettingsFragment">

    <!-- Main Container -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/background_item"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35"
        app:layout_constraintWidth_percent="0.9">


        <!-- Settings Title -->
        <TextView
            android:id="@+id/ocean_tv_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/jost_bold"
            android:text="Settings"
            android:textColor="#0347CE"
            android:textSize="30sp" />

        <!-- Sound SeekBar -->
        <SeekBar
            android:id="@+id/ocean_btn_sound"
            style="@style/SeekBarStyle"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:max="100"
            android:progress="0" />

        <!-- Sound Label -->
        <TextView
            android:id="@+id/ocean_tv_sounds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jost_bold"
            android:text="Sounds"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="@id/ocean_btn_sound"
            app:layout_constraintStart_toStartOf="@id/ocean_btn_sound"
            app:layout_constraintTop_toBottomOf="@id/ocean_btn_sound" />

        <!-- Vibration SeekBar -->
        <SeekBar
            android:id="@+id/ocean_btn_vibration"
            style="@style/SeekBarStyle"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="80dp"
            android:max="100"
            android:progress="0" />

        <!-- Vibration Label -->
        <TextView
            android:id="@+id/ocean_tv_vibration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jost_bold"
            android:text="Vibrations"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <!-- Remove Account Label -->
        <TextView
            android:id="@+id/ocean_tv_remove_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/jost_bold"
            android:text="Remove Account"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <!-- Reset Score Button -->
        <ImageButton
            android:id="@+id/ocean_btn_reset_score"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_reset_score"
            android:fontFamily="@font/jost_bold"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <!-- Settings Current Image -->
        <ImageView
            android:id="@+id/ocean_iv_settings_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/background_item"
            android:visibility="gone" />

        <!-- Current Text -->
        <TextView
            android:id="@+id/ocean_tv_current_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logoog Main"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Privacy Button -->
    <TextView
        android:id="@+id/ocean_privacy_btn_open"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/group_6"
        android:fontFamily="@font/jost_bold"
        android:gravity="center"
        android:text="Privacy"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.98"
        app:layout_constraintWidth_percent="0.7" />

</androidx.constraintlayout.widget.ConstraintLayout>
